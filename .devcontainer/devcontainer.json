{
  "name": "AI og Helse - UiB",
  "image": "mcr.microsoft.com/devcontainers/miniconda:0-3",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/opt/conda/envs/ai-helse/bin/python",
        "python.terminal.activateEnvironment": true,
        "python.terminal.activateEnvInCurrentTerminal": true,
        "jupyter.kernels.filter": [
          {
            "path": "/opt/conda/envs/ai-helse/bin/python",
            "displayName": "Python 3.12 (ai-helse)"
          }
        ],
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "github.copilot",
        "github.copilot-chat",
        "ms-vscode.live-server"
      ]
    }
  },
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "remoteUser": "vscode",
  "containerEnv": {
    "CONDA_DEFAULT_ENV": "ai-helse"
  },
  "forwardPorts": [8888, 8501, 8000],
  "portsAttributes": {
    "8888": {
      "label": "Jupyter Lab",
      "onAutoForward": "notify"
    },
    "8501": {
      "label": "Streamlit",
      "onAutoForward": "notify"
    },
    "8000": {
      "label": "FastAPI",
      "onAutoForward": "notify"
    }
  },
  "secrets": {
    "OPENAI_API_KEY": {
      "description": "OpenAI API key"
    },
    "ANTHROPIC_API_KEY": {
      "description": "Anthropic API key"
    }
  }
}
